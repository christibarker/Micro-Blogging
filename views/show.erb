<div class="container-fluid">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p top">
    	<div class="header_two">
		     <h2 class="font">Contributers</h2>
            <h5 >Profile: <%= @user.name %></h5>
    	</div>
    </div>
    <div class="col">
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
         <h4>Account Details</h4>
          <p class="left">Email: <%= @user.email %> </p>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
        <h4>Your Posts</h4>
        <div class="posts">
          <div>
            <%# @user.posts.each do |post| %>
              <p class="font"><%# post.title %></p>
              <p><%# post.content %></p>
            <%# end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="background_p padding">
        <h4>Contributers</h4>
          <div class="size">
            <% @user_all.each do |user| %>
              <p class="font">
                <a href="/show/<%= user.id %>"><%= user.name %></a></p>
            <% end %>
          </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding padding_b">
      <a href="/profile">My Profile</a>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding padding_b">
         <form action="/sign_out method=POST">
          <button type="button" class="btn btn-success">Sign Out</button>
       </form>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div>