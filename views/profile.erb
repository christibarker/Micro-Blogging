<div class="container-fluid">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p top">
    	<div class="header_two">
         <h4 >Welcome to your Profile </h4>
         <h4><%= @user.name %></h4>
    	</div>
    </div>
    <div class="col">
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
         <h4>Account Details</h4>
             <p class="left">Email: <%= @user.email %> </p>
          </div>
      </div>
    <div class="col">
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
        <form action="/create_post" method="POST">
        <div class="form-group">
          <label for="text">New Title</label>
          <input type="text" name="post[title]" class="form-control" id="title" aria-describedby="text" placeholder="title">
        </div>
        <div class="form-group">
          <label for="text">New Post</label>
          <input textarea= "maxlength 150" type= "text" name= "post[content]" class="form-control" id="content" placeholder="post">
        </div>
        <button type="submit" id="button_three" class="btn btn-primary">Submit</button>
      </form>
    </div>
   </div>
   <div class="col">
   </div>
  </div>
   <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
        <h4>Your Posts</h4>
        <div class="posts color padding">
          <div>
            <% @user.posts.each do |post| %>
              <p class="font"><%= post.title %></p>
              <p><%= post.content %></p>
              <p><p><%= post.created_at %></p></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="background_p padding">
        <h4 >Contributers</h4>
          <div class="size color">
            <% @user_all.each do |user| %>
              <p class="font">
                <a href="/show/<%= user.id %>"><%= user.name %></a></p>
            <% end %>
          </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
      	<a href="/edit_account" class="btn btn-primary"><strong>Edit Account</strong></a>
      </div>
    </div>
    <div class="col padding">
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding padding_b">
      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div>