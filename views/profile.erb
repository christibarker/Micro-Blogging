<div class="container-fluid">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p top">
    	<div class="header_two">
		     <h2>Profile</h2>
		     <p>Welcome <%= @name %></p>
    	</div>
    </div>
    <div class="col">
    </div>
  </div>
   <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
         <h4>Account Details</h4>
				 <p class="left"><strong>Email:</strong> <%= @email %> </p>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
        <form action="/profile" method="POST">
        <div class="form-group">
          <label for="text">New Title</label>
          <input type="text" name="user[title]" class="form-control" id="title" aria-describedby="text" placeholder="title">
        </div>
        <div class="form-group">
          <label for="text">New Post</label>
          <input type="text" name="user[content]" class="form-control" id="content" placeholder="post">
        </div>
        <button type="submit" id="button_three" class="btn btn-primary">Submit</button>
      </form>
    </div>
   </div>
   <div class="col">
   </div>
  </div>
   <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
        <h4>Your Posts</h4>
        <div class="posts">
          <p><%= @title %></p>
          <p><%= @content %></p>
        </div>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
      	<a href="/edit_account"><strong>Edit Account</strong></a>
      </div>
    </div>
    <div class="col padding">
    </div>
  </div>
</div>