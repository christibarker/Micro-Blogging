<div class="container-fluid">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background">
    	<div class="header">
		     <h2>Profile</h2>
		     <p>Welcome <%= @name %></p>
    	</div>
    </div>
    <div class="col">
    </div>
  </div>
   <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background">
      <div class="content">
         <h4>Account Details</h4>
				 <p class="left">Email: <%= @email %> </p>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background">
      <div class="content">
        <form action="/sign_in" method="POST">
        <div class="form-group">
          <label for="text">Title</label>
          <input type="text" name="user[title]" class="form-control" id="title" aria-describedby="text" placeholder="title">
        </div>
        <div class="form-group">
          <label for="content">Post</label>
          <input type="text" name="user[content]" class="form-control" id="content" placeholder="post">
        </div>
        <button type="submit" id="button_two" class="btn btn-primary">Submit</button>
      </form>
    </div>
   </div>
   <div class="col">
   </div>
  </div>
   <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background">
      <div class="content">
        <h4>Your Posts</h4>
        <div class="posts">
          <p><%= @title %></p>
          <p><%= @content %></p>
        </div>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background">
      <div class="content">
      	<a href="/edit_account">Edit Account</a>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div>